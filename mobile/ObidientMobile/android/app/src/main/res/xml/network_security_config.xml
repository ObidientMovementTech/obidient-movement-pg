<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Base config allowing cleartext for development -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
    
    <!-- Allow all connections for development -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Allow localhost for development server -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <!-- Allow your development machine IP (Metro bundler) -->
        <domain includeSubdomains="true">192.168.1.1</domain>
        <domain includeSubdomains="true">192.168.0.111</domain>
        <domain includeSubdomains="true">172.20.10.2</domain>
        <!-- Allow entire local network range -->
        <domain includeSubdomains="true">192.168.0.0</domain>
        <domain includeSubdomains="true">192.168.1.0</domain>
        <domain includeSubdomains="true">172.20.10.0</domain>
    </domain-config>
    
    <!-- Allow HTTPS for S3 images with permissive settings -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">s3.eu-central-1.amazonaws.com</domain>
        <domain includeSubdomains="true">generic-uat.s3.eu-central-1.amazonaws.com</domain>
        <domain includeSubdomains="true">amazonaws.com</domain>
        <domain includeSubdomains="true">s3.amazonaws.com</domain>
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </domain-config>
       
</network-security-config>
